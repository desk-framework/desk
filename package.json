{
	"name": "desk",
	"description": "Desk framework: source monorepo (not published)",
	"version": "0.0.0",
	"license": "MIT",
	"private": true,
	"scripts": {
		"postinstall": "concurrently npm:install:desk-frame npm:install:test npm:install:webcontext npm:install:www",
		"install:desk-frame": "cd packages/desk-frame && npm install",
		"install:test": "cd packages/test && npm install",
		"install:webcontext": "cd packages/webcontext && npm install",
		"install:www": "cd packages/www && npm install",
		"build": "npm run build:desk-frame && npm run build:test && npm run build:webcontext && npm run build:www",
		"build:desk-frame": "cd packages/desk-frame && npm run build",
		"build:test": "cd packages/test && npm run build",
		"build:webcontext": "cd packages/webcontext && npm run build",
		"build:www": "cd packages/www && npm run build",
		"clean": "concurrently npm:clean:*",
		"clean:desk-frame": "cd packages/desk-frame && npm run clean",
		"clean:test": "cd packages/test && npm run clean",
		"clean:webcontext": "cd packages/webcontext && npm run clean",
		"clean:www": "cd packages/www && npm run clean",
		"test": "npm run test:test && npm run test:desk-frame",
		"test:desk-frame": "cd packages/desk-frame && npm test",
		"test:test": "cd packages/test && npm test",
		"www": "cd packages/www && npm run make",
		"www-build": "cd packages/www && npm run build && npm run make",
		"check-format": " concurrently  npm:check-format:*",
		"check-format:other": "prettier --check \"**/*.md\" \"**/{package,tsconfig,config,launch,tasks}.json\"",
		"check-format:desk-frame": "cd packages/desk-frame && npm run check-format",
		"check-format:test": "cd packages/test && npm run check-format",
		"check-format:webcontext": "cd packages/webcontext && npm run check-format",
		"check-format:www": "cd packages/www && npm run check-format"
	},
	"prettier": {
		"useTabs": true
	},
	"devDependencies": {
		"@types/node": "^20.5.6",
		"c8": "^8.0.1",
		"esbuild": "^0.19.2",
		"glob": "^10.3.3",
		"http-server": "^14.1.1",
		"markdown-pipeline": "^3.0.0",
		"concurrently": "^8.2.1",
		"rimraf": "^5.0.1",
		"tslib": "^2.6.2",
		"typescript": "5.2",
		"prettier": "^3.0.3"
	}
}

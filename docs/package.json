{
	"name": "@desk-framework/docs",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"postinstall": "cd docgen && npm install",
		"build": "cd docgen && npm run build",
		"check-format": "prettier --check \"scripts/**/*.js\"",
		"postcheck-format": "cd docgen && npm run check-format",
		"validate": "node scripts/validate.js",
		"generate": "rimraf content/en/_docgen_ && node scripts/generate.js",
		"merge": "rimraf ../_site && node scripts/merge.js"
	},
	"prettier": {
		"useTabs": true,
		"trailingComma": "all",
		"endOfLine": "lf",
		"overrides": [
			{
				"files": "*.yaml",
				"options": {
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"devDependencies": {
		"@desk-framework/docgen": "file:./docgen",
		"@desk-framework/frame-core": "file:../packages/frame-core",
		"@desk-framework/frame-test": "file:../packages/frame-test",
		"@desk-framework/frame-web": "file:../packages/frame-web"
	}
}

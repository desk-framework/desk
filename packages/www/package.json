{
	"private": true,
	"name": "@desk-framework/www",
	"description": "Desk framework: website (not on NPM)",
	"author": "Jelmer Cormont",
	"license": "MIT",
	"homepage": "https://desk-framework.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/desk-framework/desk"
	},
	"scripts": {
		"clean": "rimraf build ../../_site",
		"prebuild": "rimraf build",
		"build": "run-p build:*",
		"build:pipeline": "esbuild src/pipeline.ts --bundle --outdir=build/pipeline --format=cjs --packages=external",
		"build:app": "esbuild app/app.ts --outdir=build/app --bundle --external:desk-frame --external:@desk-framework/webcontext --format=iife --target=es2020 --minify",
		"premake": "rimraf ../../_site",
		"make": "markdown-pipeline ../../_site build/pipeline/pipeline.js",
		"debug": "run-s prebuild debug:app build:pipeline premake make debug:copymap",
		"debug:app": "esbuild app/app.ts --outdir=build/app --bundle --external:desk-frame --external:@desk-framework/webcontext --format=iife --target=es2020 --sourcemap",
		"debug:copymap": "cp build/app/app.js.map ../../_site/app.js.map"
	},
	"prettier": {
		"useTabs": true,
		"overrides": [
			{
				"files": "*.yaml",
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"@desk-framework/webcontext": "file:../webcontext",
		"@desk-framework/test": "file:../test",
		"desk-frame": "file:../desk-frame"
	}
}
